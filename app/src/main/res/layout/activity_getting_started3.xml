<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreens.GettingStartedActivity3">

    <TextView
        android:id="@+id/tvSplash3"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:fontFamily="@font/mmedium"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:text="SKIP"
        android:textStyle="bold"
        android:textColor="#2C2C2F"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="24dp"/>

    <ImageView
        android:id="@+id/ivLogo2"
        android:src="@drawable/logo"
        android:layout_marginTop="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSplash3"/>

    <TextView
        android:id="@+id/tvHeader2"
        android:fontFamily="@font/mmedium"
        android:textSize="20sp"
        android:textColor="#2C2C2F"
        android:layout_marginStart="70dp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:text="What is Moze about?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivLogo2"
        android:layout_marginLeft="70dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnGetStarted"
        android:background="@drawable/mybutton"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        android:padding="10dp"
        android:text="GET STARTED"
        android:textColor="#ffffff"
        android:layout_marginStart="100dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvHeader2"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"/>

    <TextView
        android:id="@+id/tvTermsAndConditions"
        android:fontFamily="@font/mlight"
        android:textSize="20sp"
        android:textColor="#d65050"
        android:layout_marginStart="70dp"
        android:layout_marginTop="60dp"
        android:lineSpacingExtra="6dp"
        android:text="Terms and Conditions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGetStarted"
        android:layout_marginLeft="70dp" />

</androidx.constraintlayout.widget.ConstraintLayout>