        <activity
            android:name=".SplashScreens.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Daraja.MpesaAPI" />
        <activity android:name=".PayPal.PaymentDetails" />
        <activity android:name=".PayPal.PayPalPayments" />
        <activity android:name=".UserAccount.Register.Register" />
