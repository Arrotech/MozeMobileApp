<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreens.GettingStartedActivity">

    <TextView
        android:id="@+id/tvSplash"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:fontFamily="@font/mmedium"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:textStyle="bold"
        android:text="SKIP"
        android:textColor="#2C2C2F"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="24dp"/>

    <ImageView
        android:id="@+id/ivLogo"
        android:src="@drawable/logo"
        android:layout_marginTop="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSplash"/>

    <TextView
        android:id="@+id/tvHeader2"
        android:fontFamily="@font/mmedium"
        android:textSize="20sp"
        android:textColor="#2C2C2F"
        android:layout_marginStart="24dp"
        android:layout_marginTop="50dp"
        android:text="Provide Services"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivLogo"
        android:layout_marginLeft="24dp" />

    <TextView
        android:id="@+id/tvContent1"
        android:fontFamily="@font/mlight"
        android:textSize="20sp"
        android:textColor="#A3A3A3"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="6dp"
        android:text="You get to provide the services that your business offers"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHeader2"
        android:layout_marginLeft="24dp" />

<LinearLayout
    android:gravity="center"
    android:background="@drawable/mybutton"
    android:layout_width="45dp"
    android:layout_marginEnd="24dp"
    android:layout_marginTop="50dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tvContent1"
    android:layout_height="45dp"
    android:layout_marginRight="24dp">

    <ImageView
        android:id="@+id/btnGettingStarted"
        android:layout_width="30dp"
        android:src="@drawable/ic_navigate_next_black_24dp"
        android:layout_height="30dp"/>

</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>