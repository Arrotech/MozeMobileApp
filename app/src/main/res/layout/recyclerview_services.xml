<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:padding="5dp"
        card_view:cardBackgroundColor="#fff"
        card_view:cardCornerRadius="5dp"

        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvRBusinessName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_business"
                android:textStyle="bold"
                android:padding="4dp"
                android:text="Business Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvRPortfolio"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="Portfolio"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvROccupation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:textStyle="bold"
                android:text="Occupation"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvRDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="Description"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvRLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_location"
                android:padding="4dp"
                android:text="Location"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/tvRWorking_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_watch"
                android:textStyle="bold"
                android:padding="4dp"
                android:text="Working hours"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/tvRPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="phone"
                android:background="@drawable/mybutton2"
                android:drawableLeft="@drawable/ic_phone"
                android:linksClickable="true"
                android:padding="5dp"
                android:text="Phone"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/tvRCost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_money"
                android:padding="4dp"
                android:text="Cost"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="20sp" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>